# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/arcadia

# JWT Configuration
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=3h

# Blockchain Configuration - Aptos
APTOS_NODE_URL=https://fullnode.mainnet.aptoslabs.com/v1
APTOS_NETWORK=mainnet
NODIT_API_KEY=your-nodit-api-key
NODIT_PROJECT_ID=your-nodit-project-id
NODIT_WEBHOOK_SECRET=your-nodit-webhook-secret

# Blockchain Configuration - EVM
ALCHEMY_API_KEY=your-alchemy-api-key
DEFAULT_CHAIN_ID=1
ETHEREUM_NETWORK=mainnet

# Contract Addresses - Aptos
APTOS_HERO_CONTRACT_ADDRESS=your-hero-contract-address
APTOS_NODE_REGISTER_CONTRACT_ADDRESS=your-node-register-contract-address

# Contract Addresses - EVM
ETH_HERO_CONTRACT_ADDRESS=your-eth-hero-contract-address
ETH_NODE_REGISTER_CONTRACT_ADDRESS=your-eth-node-register-contract-address
ETH_NFT_CONTRACT_ADDRESS=your-eth-nft-contract-address

# Security
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=logs/server.log 